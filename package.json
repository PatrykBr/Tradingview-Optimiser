{
    "name": "tradingview-strategy-optimiser",
    "version": "1.0.0",
    "description": "TradingView Strategy Optimiser - React-based Chrome/Firefox extension",
    "main": "index.js",
    "scripts": {
        "build": "webpack --mode=production",
        "build:firefox": "webpack --mode=production --env firefox",
        "build:all": "npm run build && npm run build:firefox",
        "dev": "webpack --mode=development --watch",
        "dev:firefox": "webpack --mode=development --watch --env firefox",
        "clean": "rm -rf dist dist-firefox"
    },
    "dependencies": {
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.17",
        "@types/chrome": "^0.1.28",
        "@types/react": "^19.2.4",
        "@types/react-dom": "^19.2.3",
        "autoprefixer": "^10.4.22",
        "copy-webpack-plugin": "^13.0.1",
        "css-loader": "^7.1.2",
        "postcss": "^8.4.49",
        "postcss-loader": "^8.2.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "style-loader": "^4.0.0",
        "tailwindcss": "^4.1.17",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.3",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1"
    }
}
