{
    "manifest_version": 3,
    "name": "DOM Element Reader",
    "version": "1.0.0",
    "description": "Extension to read and output specific DOM elements",
    "permissions": ["activeTab", "storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "DOM Element Reader"
    },
    "background": {
        "service_worker": "background.js"
    }
}
