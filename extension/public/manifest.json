{
  "manifest_version": 3,
  "name": "TradingView Optimiser",
  "description": "Optimise Pine Script strategies directly on your TradingView chart with Optuna intelligence.",
  "version": "0.1.0",
  "action": {
    "default_title": "TradingView Optimiser",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.tradingview.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tradingview.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*/*"]
    }
  ]
}

