{
  "manifest_version": 3,
  "name": "TradingView Optimiser",
  "description": "Optimise TradingView strategies",
  "version": "0.1.0",
  "action": {
    "default_title": "TradingView Optimiser",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.tradingview.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tradingview.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ]
}

